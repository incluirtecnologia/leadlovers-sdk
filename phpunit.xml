<phpunit colors="true">
    <testsuites>
        <testsuite name="f">
            <directory>tests/Functional</directory>
        </testsuite>
        <testsuite name="e">
            <directory>tests/External</directory>
        </testsuite>
    </testsuites>
    <php>
        <env name="USERNAME" value="" force="true"/>
        <env name="PASSWORD" value="" force="true"/>
    </php>
    <filter>
        <whitelist addUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">src</directory>
        </whitelist>
    </filter>
</phpunit>
